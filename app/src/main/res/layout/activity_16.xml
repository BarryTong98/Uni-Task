    <!--        android:id="@+id/addGroupMember"-->
    <!--        android:layout_width="70dp"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:layout_alignEnd="@id/groupMemberView"-->
    <!--        android:layout_alignBottom="@id/groupMemberView"-->
    <!--        android:layout_marginEnd="30dp"-->
