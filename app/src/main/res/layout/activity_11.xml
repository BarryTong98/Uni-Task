<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    tools:context=".activity.activity_10_11_16.Activity_11"
    android:id="@+id/activity_11">

    <LinearLayout
        android:id="@+id/assignmentBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/assignemntName_11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment"
            android:textSize="35sp"
            android:textColor="@color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/assignmentBrief_11"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Description"
            android:textColor="@color/background_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/assignmentDue_11"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Due date"
            android:textColor="@color/background_dark"
            android:textSize="20sp" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taskRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assignmentBlock"

        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/assignmentBlock" />


</RelativeLayout>