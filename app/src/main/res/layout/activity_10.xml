<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingTop="30dp"
    android:paddingEnd="10dp"
    android:paddingBottom="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/background_home"
    tools:context=".activity.activity_10_11_16.Activity_10">


    <TextView
        android:id="@+id/assignmentList10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Assignment List"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="italic|bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/assignmentView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/assignmentList10"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/memberList10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assignmentView"
        android:layout_marginTop="20dp"
        android:text="Member List"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="italic|bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupMemberView"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@id/memberList10"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/discussion_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="onDiscussionListClick"
        android:text="@string/discussion_list"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>