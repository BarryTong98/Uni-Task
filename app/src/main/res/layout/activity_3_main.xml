<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.activity_1_2_3_4.HomeActivity_3">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_home"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/setGroupAndData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycle_home"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/createGroup_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:onClick="createGroupTestOnClick"
            android:src="@drawable/ic_baseline_person_add_alt_1_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonSet"
        android:layout_width="404dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/HomePage"
            android:layout_width="134dp"
            android:layout_height="88dp"
            android:background="@color/white"
            android:text="Home" />

        <Button
            android:id="@+id/btn_main_task"
            android:layout_width="132dp"
            android:layout_height="88dp"
            android:background="@color/white"
            android:onClick="taskOnClick"
            android:text="Task" />


        <Button
            android:id="@+id/btn_main_profile"
            android:layout_width="132dp"
            android:layout_height="88dp"
            android:background="@color/white"
            android:onClick="profileOnClick"
            android:text="Profile" />

    </LinearLayout>





</RelativeLayout>