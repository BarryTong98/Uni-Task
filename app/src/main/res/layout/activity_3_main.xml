<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.activity_1_2_3_4.HomeActivity_3"
    android:padding="5dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_home"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:id="@+id/buttonSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/recycle_home"
        android:layout_marginBottom="-100dp"
        android:layout_centerHorizontal="true"
        >
    <Button
        android:id="@+id/bt_home_register"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:onClick="registerOnClick"
        />

    <Button
        android:id="@+id/bt_home_login"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Login"
        android:onClick="loginOnClick"

        />

    <Button
        android:id="@+id/btn_set"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:onClick="setData"
        android:text="SET DATA" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/buttonSet"
        android:layout_marginBottom="-100dp"
        android:layout_centerHorizontal="true"
        >
    <Button
        android:id="@+id/btn_main_home"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Home" />

    <Button
        android:id="@+id/btn_main_task"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Task" />


    <Button
        android:id="@+id/btn_main_profile"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Profile"
        android:onClick="profileOnClick"
        />
    </LinearLayout>


</RelativeLayout>